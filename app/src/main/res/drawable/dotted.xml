<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:bottom="-4dp"
        android:left="-4dp"
        android:right="-4dp"
        android:top="0dp">

        <shape android:shape="rectangle">
            <stroke
                android:width="4dp"
                android:color="#44265E"
                android:dashGap="12dp"
                android:dashWidth="24dp" />

            <solid android:color="@android:color/transparent" />

            <padding
                android:bottom="10dp"
                android:left="10dp"
                android:right="10dp"
                android:top="10dp" />
        </shape>
    </item>
</layer-list>