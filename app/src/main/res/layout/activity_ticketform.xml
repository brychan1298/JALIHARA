<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_height="wrap_content" android:layout_width="match_parent"

    xmlns:android="http://schemas.android.com/apk/res/android">


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/tirai"
    android:orientation="vertical"
    android:id="@+id/bodyTicketForm"
    tools:context=".ticketform">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:elevation="4dp"
        android:theme="@style/Theme.AppCompat.Light.DarkActionBar"

        >
        <ImageView
            android:id="@+id/menuBtn"
            android:layout_width="33dp"
            android:layout_height="33dp"
            android:src="@drawable/baseline_menu_24"
            android:layout_marginLeft="35dp"
            ></ImageView>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="35dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Welcome to Jalihara"
                android:fontFamily="@font/poppins"
                android:textColor="#44265E"
                android:textSize="18dp"
                />
            <TextView
                android:id="@+id/usernameLbl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="User"
                android:fontFamily="@font/poppins_bold"
                android:textColor="#44265E"
                android:textSize="20dp"

                />

        </LinearLayout>

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="15dp"
            android:src="@drawable/logooutline"
            />
    </androidx.appcompat.widget.Toolbar>


    <LinearLayout
        android:layout_below="@id/toolbar"
        android:id="@+id/backBtn"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@drawable/circleshape"
        android:layout_marginStart="30dp"
        android:layout_marginTop="15dp"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/baseline_arrow_back_ios_new_24"/>
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/customticketform2"
        android:layout_marginHorizontal="25dp"
        android:layout_below="@id/backBtn"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="25dp"
        >

        <TextView
            android:id="@+id/eventNameLbl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="25dp"
            android:layout_marginTop="14dp"
            android:fontFamily="@font/poppins_bold"
            android:text="Event Name"
            android:textColor="#44265E"
            android:textSize="24dp"></TextView>

        <RelativeLayout
            android:id="@+id/infoWrapper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/eventNameLbl"
            android:layout_marginHorizontal="25dp"
            android:layout_marginTop="10dp"
            >

            <ImageView
                android:id="@+id/calendaricon"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:layout_marginRight="10dp"
                android:src="@drawable/calendaricon" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_toRightOf="@id/calendaricon"
                android:layout_centerInParent="true"
                >
                <TextView
                    android:id="@+id/eventDateLbl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="eventdate"
                    android:textColor="#44265E"
                    android:textSize="16dp"
                    android:fontFamily="@font/poppins_semibold"
                    ></TextView>
                <TextView
                    android:id="@+id/eventTimeLbl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="eventtime"
                    android:textColor="#44265E"
                    android:textSize="16dp"
                    android:fontFamily="@font/poppins_semibold"
                    ></TextView>
            </LinearLayout>
            <TextView
                android:id="@+id/eventPriceLbl"
                android:layout_width="90dp"
                android:layout_height="80dp"
                android:layout_alignParentRight="true"
                android:text="$00.00"
                android:background="@drawable/pricetagicon"
                android:gravity="center"
                android:textColor="#FFFFFF"
                android:textSize="18dp"
                android:fontFamily="@font/poppins_bold"
                />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/line1"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_below="@+id/infoWrapper"
            android:background="@drawable/customticketform2"
            android:layout_marginHorizontal="25dp"
            android:layout_marginBottom="25dp"
            android:layout_marginTop="15dp"
            android:orientation="horizontal"
            ></LinearLayout>

        <LinearLayout
            android:id="@+id/formgroup1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/line1"
            android:layout_marginHorizontal="25dp"
            >
            <ImageView
                android:layout_width="30dp"
                android:layout_height="40dp"
                android:src="@drawable/personicon"
                android:layout_marginRight="10dp"
                android:layout_gravity="center"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"

                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Customer Name :"
                    android:fontFamily="@font/poppins_semibold"
                    android:textSize="18dp"
                    android:textColor="#44265E"
                    ></TextView>
                <EditText
                    android:id="@+id/customerTxt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ticketform_inputborder"
                    android:hint="@string/customerhint"
                    android:paddingVertical="6dp"
                    android:paddingLeft="6dp"
                    />
            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/formgroup2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/formgroup1"
            android:layout_marginHorizontal="25dp"
            android:layout_marginTop="20dp"
            >
            <ImageView
                android:layout_width="30dp"
                android:layout_height="40dp"
                android:src="@drawable/qtyicon"
                android:layout_marginRight="10dp"
                android:layout_gravity="center"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"

                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Quantity :"
                    android:fontFamily="@font/poppins_semibold"
                    android:textSize="18dp"
                    android:textColor="#44265E"
                    ></TextView>
                <EditText
                    android:id="@+id/qtyTxt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ticketform_inputborder"
                    android:hint="@string/qtyhint"
                    android:paddingVertical="6dp"
                    android:paddingLeft="6dp"
                    android:inputType="number"
                    />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/formgroup3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/formgroup2"
            android:layout_marginHorizontal="25dp"
            android:layout_marginTop="20dp"
            >
            <ImageView
                android:layout_width="30dp"
                android:layout_height="40dp"
                android:src="@drawable/ticketicon"
                android:layout_marginRight="10dp"
                android:layout_gravity="center"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Booth Type :"
                    android:fontFamily="@font/poppins_semibold"
                    android:textSize="18dp"
                    android:textColor="#44265E"
                    ></TextView>
                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                    <RadioButton
                        android:id="@+id/radioButton1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="VIP"
                        android:textColor="#44265E"
                        android:fontFamily="@font/poppins"></RadioButton>
                    <RadioButton
                        android:id="@+id/radioButton2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Regular"
                        android:textColor="#44265E"

                        android:fontFamily="@font/poppins"></RadioButton>
                </RadioGroup>
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/errorMsg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Error"
            android:textSize="14dp"
            android:layout_below="@+id/formgroup3"
            android:textColor="#D9001B"
            android:gravity="center"
            android:visibility="invisible"
            />

        <LinearLayout
            android:id="@+id/line2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/errorMsg"
            >
            <ImageView
                android:layout_width="20dp"
                android:layout_height="40dp"
                android:src="@drawable/rightcircle"></ImageView>
            <LinearLayout
                android:layout_width="320dp"
                android:layout_height="4dp"
                android:background="@drawable/dotted"
                android:layout_gravity="center"
                ></LinearLayout>
            <ImageView
                android:layout_width="20dp"
                android:layout_height="40dp"
                android:src="@drawable/leftcircle"></ImageView>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/buyBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/line2"
            android:orientation="horizontal"
            android:paddingBottom="20dp"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="BUY TICKET NOW"
                android:gravity="center"
                android:layout_gravity="center"
                android:textSize="25dp"
                android:fontFamily="@font/poppins_bold"
                android:textColor="#44265E"
                />
        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/menu"
        android:layout_below="@id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="invisible"
        >
        <LinearLayout
            android:id="@+id/homeMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/menuborderbottom"
            android:gravity="center"
            android:layout_gravity="center"
            android:paddingVertical="14dp"
            >
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/nav_home"
                ></ImageView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="HOME"
                android:fontFamily="@font/poppins_semibold"
                android:layout_gravity="center"
                android:textSize="16dp"
                android:layout_marginLeft="6dp"
                android:textColor="#44265E"
                android:gravity="center"
                ></TextView>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ticketMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/menuborderbottom"
            android:gravity="center"
            android:layout_gravity="center"
            android:paddingVertical="14dp"
            >
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/nav_ticket"
                android:layout_gravity="center"
                ></ImageView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TICKET"
                android:fontFamily="@font/poppins_semibold"
                android:layout_gravity="center"
                android:textSize="16dp"
                android:layout_marginLeft="6dp"
                android:textColor="#44265E"
                android:gravity="center"
                ></TextView>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/aboutusMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/menuborderbottom"
            android:gravity="center"
            android:layout_gravity="center"
            android:paddingVertical="14dp"
            >
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/nav_aboutus"
                android:layout_gravity="center"
                ></ImageView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ABOUT US"
                android:fontFamily="@font/poppins_semibold"
                android:layout_gravity="center"
                android:textSize="16dp"
                android:layout_marginLeft="6dp"
                android:textColor="#44265E"
                android:gravity="center"
                ></TextView>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/logoutMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#C09FDE"
            android:gravity="center"
            android:layout_gravity="center"
            android:paddingVertical="14dp"
            >
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/nav_logout"
                android:layout_gravity="center"
                ></ImageView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="LOG OUT"
                android:fontFamily="@font/poppins_semibold"
                android:layout_gravity="center"
                android:textSize="16dp"
                android:layout_marginLeft="6dp"
                android:textColor="#44265E"
                android:gravity="center"
                ></TextView>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>

</ScrollView>